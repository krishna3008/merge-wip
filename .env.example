# Environment Configuration
# Copy this file to .env and update with your settings

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=merge_assist
DB_PASSWORD=your-secure-password-here
DB_NAME=merge_assist

# ============================================
# GitLab Configuration
# ============================================
GITLAB_URL=https://gitlab.com
# Get token from GitLab: Settings â†’ Access Tokens (scopes: api, read_repository)
GITLAB_TOKEN=glpat-your-gitlab-token-here

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET_KEY=your-secret-key-change-in-production-use-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# Secrets Management
# ============================================
# Options: 'local' for development, 'aws' for production
SECRETS_PROVIDER=local
# For local provider (development)
MASTER_PASSWORD=your-master-password-for-encryption
ENCRYPTION_SALT=merge-assist-salt
SECRETS_FILE=/app/secrets/local_secrets.enc
# For AWS provider (production)
AWS_REGION=us-east-1

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# Application Settings
# ============================================
LOG_LEVEL=INFO
ENVIRONMENT=development  # development, staging, production

# ============================================
# Watcher Service
# ============================================
WATCHER_POLLING_INTERVAL=300  # seconds (5 minutes)

# ============================================
# Worker POD Settings
# ============================================
DEFAULT_BATCH_SIZE=5
MAX_REJECTION_COUNT=3

# ============================================
# Health Check Settings
# ============================================
HEALTH_CHECK_INTERVAL=60  # seconds
ALERT_EMAIL=admin@example.com

# ============================================
# AI Debugging Assistant (Optional)
# ============================================
AI_ENABLED=false
# OpenAI API key or Anthropic API key
AI_API_KEY=your-ai-api-key-here
AI_MODEL=gpt-4  # or claude-3-opus-20240229

# ============================================
# Frontend Settings
# ============================================
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8000

# ============================================
# Kubernetes Settings (Production)
# ============================================
K8S_NAMESPACE=merge-assist
K8S_SERVICE_ACCOUNT=merge-assist-sa
